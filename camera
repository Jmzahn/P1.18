function openLight(){

}

function openMusic(){

}

function openSettings(){

}

function openWeather(){

}

function openCalendar(){
  
}

function hide(){
  if(hidden)
    hidden = False;
  else
    hidden = True;
}

function draw() {
  background(255);
  translate(capture.width, 0);
  scale(-1, 1);
  image(capture, 0, 0, 320, 240);
}
